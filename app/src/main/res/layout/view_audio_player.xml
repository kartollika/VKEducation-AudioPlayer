<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/audio_player_background"
    android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <include
        android:id="@+id/view_mini_player"
        layout="@layout/view_mini_player"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottom_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_sheet_hide_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_half_vertical_margin"
            android:layout_marginBottom="@dimen/default_vertical_margin"
            android:src="@drawable/dropdown_24" />

        <FrameLayout
            android:id="@+id/player_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>
