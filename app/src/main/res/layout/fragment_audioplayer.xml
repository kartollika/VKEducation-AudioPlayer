<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <kartollika.vkeducation.audioplayer.common.views.AudioTracksCarouselRecyclerView
            android:id="@+id/tracksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never">

        </kartollika.vkeducation.audioplayer.common.views.AudioTracksCarouselRecyclerView>

        <com.google.android.exoplayer2.ui.PlayerControlView
            android:id="@+id/exo_controllers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_double_horizontal_margin"
            android:layout_marginRight="@dimen/default_double_horizontal_margin"
            app:controller_layout_id="@layout/player_controls"
            app:show_timeout="0">

        </com.google.android.exoplayer2.ui.PlayerControlView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/previousTrackActionView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:scaleX="-1"
                android:src="@drawable/ic_mini_player_next_28" />

            <ImageView
                android:id="@+id/playActionView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:background="@drawable/standart_circle_button_gradient"
                android:padding="12dp"
                android:src="@drawable/ic_play_48" />

            <ImageView
                android:id="@+id/pauseActionView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:background="@drawable/standart_circle_button_gradient"
                android:padding="12dp"
                android:src="@drawable/ic_pause_48"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/nextTrackActionView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mini_player_next_28" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/shuffleActionView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/standart_circle_button_gradient"
        android:padding="8dp"
        android:src="@drawable/ic_shuffle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>

