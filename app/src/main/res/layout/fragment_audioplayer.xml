<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <kartollika.vkeducation.audioplayer.common.views.AudioTracksCarouselRecyclerView
        android:id="@+id/tracks_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never" />

    <kartollika.vkeducation.audioplayer.common.views.audio_seekbar.AudioSeekbar
        android:id="@+id/audio_seekbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous_track_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mini_player_next_28" />

        <ImageView
            android:id="@+id/pause_track_view"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/standart_circle_button_gradient"
            android:padding="12dp"
            android:src="@drawable/ic_pause_48" />

        <ImageView
            android:id="@+id/next_track_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mini_player_next_28" />
    </LinearLayout>

</LinearLayout>