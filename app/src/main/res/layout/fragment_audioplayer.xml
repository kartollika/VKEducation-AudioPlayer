<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <kartollika.vkeducation.audioplayer.common.views.AudioTracksCarouselRecyclerView
        android:id="@+id/tracksRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never">

    </kartollika.vkeducation.audioplayer.common.views.AudioTracksCarouselRecyclerView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tracksDummyView"
        android:layout_width="249dp"
        android:layout_height="249dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_music_note_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:text="Похоже, вы не выбрали папку, откуда играть музыку. Выберите ее на главном экране и вовзращайтесь назад :)"
                android:textSize="14sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.google.android.exoplayer2.ui.PlayerControlView
        android:id="@+id/exo_controllers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:controller_layout_id="@layout/player_controls"
        app:show_timeout="0">

    </com.google.android.exoplayer2.ui.PlayerControlView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previousTrackActionView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mini_player_next_28" />

        <ImageView
            android:id="@+id/playActionView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/standart_circle_button_gradient"
            android:padding="12dp"
            android:src="@drawable/ic_play_48" />

        <ImageView
            android:id="@+id/pauseActionView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/standart_circle_button_gradient"
            android:padding="12dp"
            android:src="@drawable/ic_pause_48"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/nextTrackActionView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mini_player_next_28" />
    </LinearLayout>

</LinearLayout>