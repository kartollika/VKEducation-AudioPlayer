<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/albumPreviewImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/images" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/songNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/default_three_quarters_horizontal_margin"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="16sp"
            tools:text="Song name" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/test"
        android:layout_alignBottom="@+id/test"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@id/test"
        android:background="@android:color/white"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/durationSongLengthView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/default_three_quarters_horizontal_margin"
            android:gravity="right"
            android:textColor="@color/regent_gray"
            android:textSize="12sp"
            tools:text="-3:21" />

        <ImageButton
            android:id="@+id/playPauseActionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/default_horizontal_margin"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play_28" />

        <ImageButton
            android:id="@+id/nextTrackActionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_mini_player_next_28" />

    </LinearLayout>


</RelativeLayout>